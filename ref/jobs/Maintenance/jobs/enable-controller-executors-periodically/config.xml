<?xml version='1.1' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Periodically enable executors on the controller for those jobs that must access the controller file system</description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <jenkins.model.BuildDiscarderProperty>
      <strategy class="hudson.tasks.LogRotator">
        <daysToKeep>-1</daysToKeep>
        <numToKeep>7</numToKeep>
        <artifactDaysToKeep>-1</artifactDaysToKeep>
        <artifactNumToKeep>-1</artifactNumToKeep>
      </strategy>
    </jenkins.model.BuildDiscarderProperty>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <assignedNode>!cloud</assignedNode>
  <canRoam>false</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <jdk>jdk17</jdk>
  <triggers>
    <hudson.triggers.TimerTrigger>
      <spec># Every hour
H * * * *</spec>
    </hudson.triggers.TimerTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders/>
  <publishers>
    <org.jvnet.hudson.plugins.groovypostbuild.GroovyPostbuildRecorder plugin="groovy-postbuild@2.5">
      <script plugin="script-security@1.75">
        <script>import jenkins.model.Jenkins
Jenkins jenkins = Jenkins.getInstance()
if (jenkins.computers.size() &gt; 1) {
  /* If multiple agents are available, enable executors on controller */
  /* Prefer that jobs not run on controller, but some test jobs require access to the controller file system */
  jenkins.setNumExecutors(3)
  jenkins.save()
  sleep(15000) // Wait 15 seconds
  jenkins.setNumExecutors(0) // Reset to no executors
  jenkins.save()
}
</script>
        <sandbox>false</sandbox>
      </script>
      <behavior>1</behavior>
      <runForMatrixParent>false</runForMatrixParent>
    </org.jvnet.hudson.plugins.groovypostbuild.GroovyPostbuildRecorder>
  </publishers>
  <buildWrappers/>
</project>
