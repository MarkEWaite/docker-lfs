FROM jenkins/jenkins:2.204.1-slim

LABEL maintainer="mark.earl.waite@gmail.com"

USER root

RUN apt-get clean && apt-get update && apt-get install -y \
  gnupg \
  locales \
  lsb-release \
  && rm -rf /var/lib/apt/lists/*

# Disable assistive technologies since openjdk:slim installs headless JDK
RUN sed -i 's/assistive_technologies=.*/assistive_technologies=/g' /etc/java-8-openjdk/accessibility.properties

# Enable en_US.UTF-8 locale and generate
RUN sed -i 's/. en_US.UTF-8 UTF-8/en_US.UTF-8 UTF-8/g' /etc/locale.gen \
    && ln -s /etc/locale.alias /usr/share/locale/locale.alias \
    && locale-gen \
    && update-locale LANG=en_US.UTF-8

USER jenkins

# $REF (defaults to `/usr/share/jenkins/ref/`) contains all reference configuration we want
# to set on a fresh new installation. Use it to bundle additional plugins
# or config file with your custom jenkins Docker image.
ADD ref /usr/share/jenkins/ref/
